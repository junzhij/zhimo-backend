# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=zhimo_user
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=zhimo_db

MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=zhimo_knowledge

REDIS_URL=redis://localhost:6379

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=zhimo-documents

# OpenAI Configuration (Required for Analysis Agent)
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Alternative AI Providers (Optional)
# For Azure OpenAI:
# OPENAI_BASE_URL=https://your-resource.openai.azure.com/
# OPENAI_API_KEY=your_azure_api_key

# For other OpenAI-compatible providers:
# OPENAI_BASE_URL=https://api.anthropic.com/v1
# OPENAI_API_KEY=your_anthropic_api_key

# Application Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret

# Logging
LOG_LEVEL=info